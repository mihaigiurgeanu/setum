<?xml version="1.0" encoding="ISO-8859-15"?>

<jonas-ejb-jar xmlns="http://www.objectweb.org/jonas/ns"
	           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

  <!--
      xsi:schemaLocation="http://www.objectweb.org/jonas/ns
                      http://www.objectweb.org/jonas/ns/jonas-ejb-jar_4_3.xsd"
  -->

  <jonas-entity>
    <ejb-name>ProductEJB</ejb-name>
    <jndi-local-name>ProductLocalHome</jndi-local-name>
    <jdbc-mapping>
      <jndi-name>erpsetumdb</jndi-name>
      <automatic-pk>true</automatic-pk>
    </jdbc-mapping>
    <cleanup>create</cleanup>
  </jonas-entity>
  <jonas-entity>
    <ejb-name>AttributeEJB</ejb-name>
    <jndi-local-name>AttributeLocalHome</jndi-local-name>
    <jdbc-mapping>
      <jndi-name>erpsetumdb</jndi-name>
      <automatic-pk>true</automatic-pk>
    </jdbc-mapping>
    <cleanup>create</cleanup>
  </jonas-entity>
  <jonas-entity>
    <ejb-name>CategoryEJB</ejb-name>
    <jndi-local-name>CategoryLocalHome</jndi-local-name>
    <jdbc-mapping>
      <jndi-name>erpsetumdb</jndi-name>
    </jdbc-mapping>
    <cleanup>create</cleanup>
  </jonas-entity>
  <jonas-entity>
    <ejb-name>CompositeProductEJB</ejb-name>
    <jndi-local-name>CompositeProductLocal</jndi-local-name>
    <jdbc-mapping>
      <jndi-name>erpsetumdb</jndi-name>
    </jdbc-mapping>
    <cleanup>create</cleanup>
  </jonas-entity>
  <jonas-entity>
    <ejb-name>OfferEJB</ejb-name>
    <jndi-local-name>OfferLocalHome</jndi-local-name>
    <jdbc-mapping>
      <jndi-name>erpsetumdb</jndi-name>
    </jdbc-mapping>
    <cleanup>create</cleanup>
  </jonas-entity>
  <jonas-entity>
    <ejb-name>OfferItemEJB</ejb-name>
    <jndi-local-name>OfferItemLocalHome</jndi-local-name>
    <jdbc-mapping>
      <jndi-name>erpsetumdb</jndi-name>
      <automatic-pk>true</automatic-pk>
    </jdbc-mapping>    
    <cleanup>create</cleanup>
  </jonas-entity>
  <jonas-entity>
    <ejb-name>DocumentEJB</ejb-name>
    <jndi-local-name>DocumentLocalHome</jndi-local-name>
    <jdbc-mapping>
      <jndi-name>erpsetumdb</jndi-name>
      <automatic-pk>true</automatic-pk>
    </jdbc-mapping>
    <cleanup>create</cleanup>
  </jonas-entity>

  <jonas-ejb-relation>
    <ejb-relation-name>ProductAttribute</ejb-relation-name>
    <jonas-ejb-relationship-role>
      <ejb-relationship-role-name>AttributeWithProductValue</ejb-relationship-role-name>
      <foreign-key-jdbc-mapping>
	<foreign-key-jdbc-name>ProductValue</foreign-key-jdbc-name>
      </foreign-key-jdbc-mapping>
    </jonas-ejb-relationship-role>
  </jonas-ejb-relation>
</jonas-ejb-jar>
